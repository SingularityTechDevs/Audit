{
    "version": 2,
    "builds": [{
        "src": "audit/audit/wsgi.py",
        "use": "@vercel/python",
        "config": {
            "maxLambdaSize": "15mb",
            "runtime": "python3.9",
            "includeFiles": [
                "audit/**/*",
                "core/**/*",
                "visitas/**/*",
                "templates/**/*",
                "static/**/*",
                "media/**/*",
                "*.py"
            ]
        }
    }],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "audit/audit/wsgi.py"
        }
    ]
}